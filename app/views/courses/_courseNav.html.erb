<% @lectures.each do |lecture| %>
  <div class="mt-3 mb-3" style="display: flex; justify-content: center;">
    <nav class="navbar navbar-light bg-light flex-column align-items p-3" style="width: 800px;">
      <p class="navbar-brand" ><strong><%= "Lecture #{@lecture_count += 1} - #{lecture.name} - #{lecture.lecture_date}" %></strong></p>
      <%= link_to "add notes, readings or relevant files",  new_course_lecture_note_path(course_id: @course.id, lecture_id: lecture.id) %>
        <% if lecture.notes.first.nil? %>
          <p>No notes or readings were submitted for this lecture.</p>
        <% else %>
          <div style="display: flex; justify-content: space-around;">
          <% unless lecture.notes.first.nil? %>
            <% lecture.notes.each do |note| %>
              <div>
                <%= render 'shared/noteCard', note: note, lecture: lecture, course: @course %>
              </div>
            <% end %>
          <% end %>
          </div>
        <% end %>
    </nav>
  </div>
<% end %>
