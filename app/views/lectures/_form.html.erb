<%= simple_form_for(@lecture, :url => {:action => "create"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :lecture_date, required: true, label: "Lecture date" %>
    <div class="form-actions mt-3">
      <%= f.input :name, label: "Lecture topic:" %>
    </div>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Submit", class: "btn btn-outline-primary" %>
  </div>
<% end %>
