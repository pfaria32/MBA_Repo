<div class="card mt-3 mb-3 ml-2 mr-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= link_to "#{course.name}", course %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= course.code  %></h6>
    <h6 class="card-subtitle mb-2 text-muted"><%= course.professor  %></h6>
    <p class="card-text"><%= course.description  %></p>
    <a href="#" class="card-link"><%= link_to 'Open', course %></a>
    <a href="#" class="card-link"><%= link_to 'Edit', edit_course_path(course) %></a>
    <% if course.user_id == current_user.id %>
      <a href="#" class="card-link"><%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' } %></a>
    <% end %>
  </div>
</div>
